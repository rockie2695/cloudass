<html>
    <head> 
        <title><%=title%></title>
		
        <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true&key=AIzaSyDDrFtwORjr3GZho-K5tVYTWUakGaenirM"></script>
        <script type="text/javascript">
            var loadMap = function() 
            {
				var myLatLng = {lat: <%=lat%>, lng: <%=lon%>};
                var map = new google.maps.Map(document.getElementById("map"),{
				      zoom: <%=zoom%>,
				      center: myLatLng
				}); 
				var map = new google.maps.Marker({
					position: myLatLng,
					map: map,
					title: '<%=title%>'
				});
            };
            window.onload= loadMap;
        </script>
    </head>
    <body>
        <div id="map" style="width:100%;height:100%;">
    </body>
</html>
